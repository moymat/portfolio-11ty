<li class="project-card hidden" id="{{ project.data.title }}-card">
	<div class="project-illustration">
		<canvas
			data-link="{{ project.data.illus }}"
			class="original-canvas"
		></canvas>
	</div>
	<div class="project-content">
		<h3>{{ project.data.title }}</h3>
		<p class="project-description">
			Reprehenderit cupidatat culpa officia velit mollit dolore voluptate esse
			labore non.
		</p>
		<span class="page-link">
			<a
				class="glitchy-link project-link"
				data-content="en savoir plus"
				href="{{ project.url }}"
				>en savoir plus</a
			>
		</span>
	</div>
</li>
